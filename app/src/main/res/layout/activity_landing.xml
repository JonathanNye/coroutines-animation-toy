<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".LandingActivity">

    <Button
            android:id="@+id/activity_landing_bare_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/bare_animation" />

    <Button
            android:id="@+id/activity_landing_looping_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/looping_animation" />

    <Button
            android:id="@+id/activity_landing_interactive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interactive_animation" />

</LinearLayout>
